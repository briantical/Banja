include components/header
doctype html
html
    head
        include components/head
        title BodaBoda Banja : Reset Password
    body
        +banja_header(names,home, true)
        .banja_content
            h3 Reset Password
            form(action="/user/resetpassword", method="POST")
                table
                    tbody
                        tr
                            td: label(for="username") Username :
                            td: input#username(type="text", name="username")
                        tr
                            td: label(for="oldpassword") Old Password :
                            td: input#oldpassword(type="password", name="oldpassword")
                        tr
                            td: label(for="newpassword") New Password :
                            td: input#newpassword(type="password", name="newpassword")
                        tr
                            td: input(type="submit", value="Reset Password")
                            td: input(type="reset", value="Cancel")
        include components/footer