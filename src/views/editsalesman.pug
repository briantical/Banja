include components/header
doctype html
html
    head
        include components/head
        title BodaBoda Banja : Salesmen
    body
        +banja_header(names,home,false)
        .banja_content
            h3 Edit Salesmen
            form(action="/admin/editsalesman", method="post")
                -
                    let user_data = JSON.parse(rolesman)
                    let {user:{_id:userID,names:personname, username,phoneNumber,dateOfBirth,dateOfRegistration},ids,numberOfWorkingDays,email,supervisor,_id} = user_data
                table
                    tbody
                        tr
                            td
                                fieldset
                                    legend Personal Information
                                    table
                                        tbody
                                            tr
                                                td.form_headers Full Names :
                                                td: input#names(type="text", name="names", autocomplete="off",placeholder=personname)
                                            tr
                                                td.form_headers Username :
                                                td: input#username(type="text", name="username",autocomplete="off", placeholder=username)
                                            tr
                                                td.form_headers Phone Number :
                                                td: input#phoneNumber(type="tel", name="phoneNumber",autocomplete="off",placeholder=phoneNumber)
                                            tr
                                                td.form_headers Date of Birth :
                                                td: input#dateOfBirth(type="date", name="dateOfBirth",autocomplete="off",placeholder=dateOfBirth)
                                                td: input#userID(type="text", name="userID", value=userID, hidden)
                                                td: input#roleID(type="text", name="roleID", value=_id, hidden)
                        tr
                            td
                                fieldset
                                    legend Details
                                    table
                                        tbody
                                            tr
                                                td.form_headers Unique ID :
                                                td: input#ids(type="text", name="ids", autocomplete="off",placeholder=ids)
                                            tr
                                                td.form_headers Supervisor :
                                                td
                                                    select#supervisor(name="supervisor")
                                                        option(value=supervisor)=supervisor
                                                        each _supervisor in supervisors
                                                            option(value=_supervisor.user.names)=_supervisor.user.names
                                            tr
                                                td.form_headers Number of working days :
                                                td: input#numberOfWorkingDays(type="number", name="numberOfWorkingDays", autocomplete="off",placeholder=numberOfWorkingDays)
                                            tr
                                                td.form_headers Email (optional) :
                                                td: input#email(type="email", name="email", autocomplete="off",placeholder=email)
                        tr
                            td: input.add_salesman_btns(type="submit", value="SUBMIT")
                            td: input.add_salesman_btns(type="reset", value="RESET")

        include components/footer
        script(src="/static/js/bootstrap/jquery.js")
        script(src="/static/js/bootstrap/bootstrap.js")
        script(src="/static/js/index.js")