include components/header
include components/filter
include components/deleteuser
include components/edituser
doctype html
html
    head
        include components/head
        title BodaBoda Banja : Sales Executives
    body
        +banja_header(names,home, false)
        .banja_content
            h3 Sales Executives
            +banja_filter("/admin/saleslist", "ids")
            table.table
                thead.thead-dark
                    tr
                        th Unique ID
                        th Name
                        th Username
                        th Phone Number
                        th Email
                        th Supervisor
                        th Working Days 
                        th Date of Birth     
                tbody
                    each sale in sales
                        tr
                            td #{sale.ids}
                            td #{sale.user.names}
                            td #{sale.user.username}
                            td #{sale.user.phoneNumber}
                            td #{sale.email}
                            td #{sale.supervisor}
                            td #{sale.numberOfWorkingDays}  
                            td #{sale.user.dateOfBirth}
                            td: +delete_banja_user(sale, "/admin/deletesales")
                            td: +edit_banja_user(sale, "/admin/editsales") 
            a(href="/admin/sales", title="Add salesman"): .add_button.commons_vertical#add_customers +
        include components/footer