include components/header
doctype html
html
    head
        include components/head
        title BodaBoda Banja : Customers
    body
        +banja_header(names, home, false)
        .banja_content
            h3 Add Customer
            form(action="/sales/customers", method="post")
                table
                    tbody
                        tr
                            td
                                fieldset
                                    legend Personal Information
                                    table
                                        tbody
                                            tr
                                                td.form_headers Full Names :
                                                td: input#names(type="text", name="names", autocomplete="off", pattern="/Aa-Zz/", required)
                                            tr
                                                td.form_headers Username :
                                                td: input#username(type="text", name="username",autocomplete="off",required)
                                            tr
                                                td.form_headers Phone Number :
                                                td: input#phoneNumber(type="tel", name="phoneNumber",autocomplete="off",required, minlength="10", maxlength="10")
                                            tr
                                                td.form_headers Date of Birth :
                                                td: input#dateOfBirth(type="date", name="dateOfBirth",autocomplete="off",required)
                        tr
                            td
                                fieldset
                                    legend Verification
                                    table
                                        tbody
                                            tr
                                                td.form_headers National ID Number (NIN) :
                                                td: input#NIN(type="text", name="NIN", autocomplete="off", minlength="13",maxlength="13", pattern="/Az-aZ*/",required)
                                            tr
                                                td.form_headers Nationality :
                                                td: input#nationality(type="text", name="nationality", autocomplete="off",required)
                                            tr
                                                td.form_headers Marital Status :
                                                td: input#maritalStatus(type="text", name="maritalStatus", autocomplete="off")
                                            tr
                                                td.form_headers Verification Documents :
                                                td
                                                    label Provided
                                                    input#provided(type="radio", name="documents",value="true")
                                                    label Not Provided
                                                    input#notprovided(type="radio", name="documents", value="false", checked)
                                            tr
                                                td.form_headers Stage Name :
                                                td: input#stageName(type="text", name="stageName", autocomplete="off",required)
                                            tr
                                                td.form_headers LC One :
                                                td: input#lcOne(type="text", name="lcOne", autocomplete="off",required)
                                            tr
                                                td.form_headers LC Three :
                                                td: input#lcThree(type="text", name="lcThree", autocomplete="off",required)
                        tr
                            td
                                fieldset
                                    legend Vehicle Details
                                    table
                                        tbody
                                            tr
                                                td.form_headers Vehicle :
                                                td
                                                    select#vehicleType(name="vehicleType")
                                                        option(value="BodaBoda") BodaBoda
                                                        option(value="TukTuk") TukTuk
                                            tr
                                                td.form_headers Down Payment :
                                                td: input#downPaymnet(type="number", name="downPaymnet", autocomplete="off",required)
                        tr
                            td
                                fieldset
                                    legend Referee
                                    table
                                        tbody
                                            tr
                                                td.form_headers Name :
                                                td: input#refereeName(type="text", name="refereeName", autocomplete="off",required)
                                            tr
                                                td.form_headers Date of Birth :
                                                td: input#refereeDob(type="date", name="refereeDob",autocomplete="off",required)
                                            tr
                                                td.form_headers Occupation :
                                                td: input#refereeOccupation(type="text", name="refereeOccupation",autocomplete="off",required)
                                            tr
                                                td.form_headers Contact :
                                                td: input#refereeContact(type="tel", name="refereeContact",autocomplete="off",required, minlength="10", maxlength="10")
                        tr
                            td: input.add_customer_btns(type="submit", value="SUBMIT")
                            td: input.add_customer_btns(type="reset", value="RESET")
        include components/footer
        script(src="/static/js/bootstrap/jquery.js")
        script(src="/static/js/bootstrap/bootstrap.js")
        script(src="/static/js/index.js")