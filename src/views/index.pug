doctype html
html
    head
        //- Include the head with the meta and link tags
        include components/head.pug
        title BodaBoda Banja : Sign in
    body
        form(action="/api/v1/signin" method="POST")
            table
                tbody
                    tr
                        td Username :
                        td
                            input#username(type="text", name="username")
                    tr
                        td Password :
                        td
                            input#userpassword(type="password", name="userpassword")
                    tr
                        td(cols="2")
                            a(href="/api/v1/register") Have no account? Register instead
                    tr
                        td
                            input#btn_submit_login(type="submit", value="SUBMIT")
                        td
                            input#btn_reset_login(type="reset", value="CANCEL")
                    tr
                        td(cols="2")
                            a(href="/api/v1/resetpassword") Reset Password
                        

        //- Include the footer component
        include components/footer
        script(src="/static/js/bootstrap/jquery.js")
        script(src="/static/js/bootstrap/bootstrap.js")
        script(src="/static/js/index.js")
        